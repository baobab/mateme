        <%
        @i = 0

        out = []

        @encounters.each{|v,k|
          out << [k["ANC VISIT TYPE"]["REASON FOR VISIT"].squish.to_i, v]
        }
        out = out.sort

        out.each do |key, element|
          
          encounter = @encounters[element]

          @i = @i + 1
        %>

          <tr style="font-size: 0.8em; font-weight: normal; font-style: italic;">
            <td class="topic leftTop" style="font-style: normal;">
  <%#= @i %>
              <%= key %>
            </td>
            <td class="leftTop">
              <%= element %>
            </td>
            <td class="leftTop" align="center">
              <%= (((element.to_date - @current_range[0]["START"].to_date).to_i / 7) <= 0 ? "?" :
                  (((element.to_date - @current_range[0]["START"].to_date).to_i / 7) - 1).to_s + " wks") rescue "&nbsp;" %>
            </td>
            <td class="leftTop" align="center">
              <%= (encounter["OBSERVATIONS"]["FUNDUS"].to_i <= 0 ? "?" :
                  encounter["OBSERVATIONS"]["FUNDUS"].to_i.to_s + " (wks)") rescue "&nbsp;" %>
            </td>
            <td class="leftTop">
              <%= (encounter["OBSERVATIONS"]["POSITION"]).to_s.titleize.gsub("Breech Delivery", "Breech") rescue "&nbsp;" %>&nbsp;
              <%= (encounter["OBSERVATIONS"]["PRESENTATION"]).to_s.titleize.gsub("Breech Delivery", "Breech") rescue "&nbsp;" %>
            </td>
            <td class="leftTop" align="center">
              <%= (encounter["OBSERVATIONS"]["FETAL HEART BEAT"].humanize == "Unknown" ? "?" :
                  encounter["OBSERVATIONS"]["FETAL HEART BEAT"].humanize) rescue "&nbsp;" %>
            </td>
            <td class="leftTop" align="center">
              <%= (encounter["VITALS"]["WEIGHT (KG)"].to_i <= 0 ? "?" :
                  ((encounter["VITALS"]["WEIGHT (KG)"].to_s.match(/\.[1-9]/) ?
                      encounter["VITALS"]["WEIGHT (KG)"] :
                      encounter["VITALS"]["WEIGHT (KG)"].to_i))) rescue "&nbsp;" %>
            </td>
            <td class="leftTop">
              <%= (encounter["VITALS"]["SYSTOLIC BLOOD PRESSURE"].to_i <= 0 ? "?" :
